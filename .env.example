# Configuration des clés API pour le système d'agents

# OpenAI API Key (requis)
OPENAI_API_KEY=your_openai_api_key_here

# Tavily API Key (pour la recherche web)
TAVILY_API_KEY=your_tavily_api_key_here

# Perplexity API Key (optionnel)
PERPLEXITY_API_KEY=

# Autres clés API optionnelles
# ANTHROPIC_API_KEY=your_anthropic_key_here
# GOOGLE_API_KEY=your_google_key_here

# ============================================
# Configuration Base de données PostgreSQL
# ============================================
POSTGRES_DB=filialeagents
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Database URL (utilisé par l'API)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/filialeagents

# ============================================
# Configuration OAuth HubSpot
# ============================================
# Obtenez ces credentials sur https://developers.hubspot.com/
HUBSPOT_CLIENT_ID=your_hubspot_client_id_here
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret_here

# Redirect URI (doit être configuré dans HubSpot App settings)
# Dev: http://localhost:8012/auth/hubspot/callback
# Prod: https://yourdomain.com/auth/hubspot/callback
HUBSPOT_REDIRECT_URI=http://localhost:8012/auth/hubspot/callback

# ============================================
# Configuration JWT (Sécurité)
# ============================================
# IMPORTANT: Changez cette clé secrète en production!
# Générez une clé sécurisée avec: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# Configuration Redis
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_TTL=7200

# ============================================
# Configuration de l'application
# ============================================
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=production

# Configuration des limites
MAX_EXTRACTION_TIME=300
MAX_SUBSIDIARIES=50

# Configuration WebSocket
WS_HEARTBEAT_INTERVAL=30
WS_CONNECTION_TIMEOUT=300

# Configuration du système (optionnel)
# VECTORSTORE_TYPE=faiss  # ou chroma
# MAX_SEARCH_RESULTS=10
# CHUNK_SIZE=500
# CHUNK_OVERLAP=50
